@incollection{venti_wise_nber_2004,
  author    = {Steven F. Venti and David A. Wise},
  title     = {{Aging and Housing Equity: Another Look}},
  booktitle = {{Perspectives on the Economics of Aging}},
  publisher = {National Bureau of Economic Research, Inc},
  year      = 2004,
