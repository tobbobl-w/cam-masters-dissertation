}

@article{Nakajima_Telyukova_ier_2020,
  author   = {Nakajima, Makoto and Telyukova, Irina A.},
  title    = {HOME EQUITY IN RETIREMENT},
  journal  = {International Economic Review},
  volume   = {61},
  number   = {2},
  pages    = {573-616},
  doi      = {https://doi.org/10.1111/iere.12435},
  url      = {https://onlinelibrary.wiley.com/doi/abs/10.1111/iere.12435},
  eprint   = {https://onlinelibrary.wiley.com/doi/pdf/10.1111/iere.12435},
  abstract = {Abstract Retired homeowners dissave more slowly than renters, which suggests that homeownership affects retirees' saving decisions. 
              We investigate empirically and theoretically the life-cycle patterns of homeownership, housing, and nonhousing assets in retirement.
              Using an estimated structural model of saving and housing decisions,
              we find first that homeowners dissave slowly because they prefer to stay in their house as long as possible but cannot easily borrow against it.
              Second, the 1996-2006 housing boom significantly increased homeowners' assets. These channels are quantitatively significant; without considering homeownership, retirees' net worth would be
              28-44 percentage lower, depending on age.},
  year     = {2020}
}


@article{de_nardi_et_al_are_2016,
